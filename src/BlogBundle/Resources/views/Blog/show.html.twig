{% extends '@Blog/layout.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <article>
        <header>

            <h2>{{ post.title }}</h2>
        </header>
        <img src="{{ asset(['images/', post.image]|join) }}" alt="{{ post.title }} image not found" />
        <div>
            <p>{{ post.post }}</p>
        </div>
    </article>
{% endblock %}